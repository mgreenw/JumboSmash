{
  "name": "JumboSmash",
  "version": "2019.0.0-alpha-1",
  "description": "Remake of Halligan Helper",
  "scripts": {
    "start": "node src/server/index.js",
    "build": "webpack --mode production",
    "client": "export NODE_ENV=development;webpack-serve --config ./webpack.config.js",
    "server": "export NODE_ENV=development;nodemon src/server/index.js -w src/server --exec babel-node",
    "migrate": "export NODE_ENV=development;node-pg-migrate --migrations-dir ./src/server/db/migrations",
    "eslint": "eslint ./src",
    "flow": "flow check ./src",
    "dev": "./scripts/runDev.sh"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "config": "^1.30.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "pg": "^7.4.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "sql-template-strings": "^2.2.2",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "flow-bin": "^0.77.0",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.18.0",
    "husky": "^1.0.0-rc.13",
    "koa-connect": "^2.0.1",
    "node-pg-migrate": "^3.8.0",
    "nodemon": "^1.18.3",
    "prettier": "1.13.7",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-serve": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run flow",
      "pre-push": "npm run eslint && npm run flow"
    }
  }
}
